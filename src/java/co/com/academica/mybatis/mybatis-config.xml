<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <environments default ="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://localhost:3306/academica"/>
                <property name="username" value="root"/>
                <property name="password" value="nando"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="co/com/academica/xml/TblUsuariosMapper.xml"/>
        <mapper resource="co/com/academica/xml/TblCalendarioMateriaMapper.xml"/>
        <mapper resource="co/com/academica/xml/TblCursoMapper.xml"/>
        <mapper resource="co/com/academica/xml/TblDocentesMapper.xml"/>
        <mapper resource="co/com/academica/xml/TblEstudiantesMapper.xml"/>
        <mapper resource="co/com/academica/xml/TblMateriasMapper.xml"/>
        <mapper resource="co/com/academica/xml/TblMatriculaMapper.xml"/>
        <mapper resource="co/com/academica/xml/TblCiudadesMapper.xml"/>
    </mappers>       
</configuration>